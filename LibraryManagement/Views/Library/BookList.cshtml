@model List<LibraryManagement.DataTransferObjects.BookListDto>
@{
    ViewData["Title"] = "BookList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .table-striped > tbody > tr:nth-child(2n+1) > td, .table-striped > tbody > tr:nth-child(2n+1) > th {
        background-color: darkgray;
    }
</style>

<div class="row"><h2 class="float-right mt-4">لیست کتاب ها</h2></div>


<table class="table table-striped table-dark table-bordered text-center">
    <thead>
        <tr>
            <th>نام کتاب</th>
            <th>حذف کتاب</th>
            <th>جزئیات کتاب</th>
        </tr>
    </thead>
    @foreach (var book in Model)
    {
        <tr>
            <td class="bookname">
                @book.Book
            </td>
            <td>
                <a class="text-danger btn btn-light w-100" href="/Library/DeleteBook/@book.Id">حذف</a>
            </td>
            <td>
                <a class="text-info btn btn-info w-100" href="/Library/BookDetail/@book.Id">جزئییات</a>
            </td>
        </tr>
    }
</table>

<div>
    @if (TempData["DeleteBook"] != null)
    {
        <h3 class="text-center mt-3 text-danger">@TempData["DeleteBook"]</h3>
    }

    @if (ViewBag.BookListErros != null)
    {
        var error = ViewBag.BookListErros;

        foreach (var err in error)
        {
            <h3 class="text-center mt-3 text-danger">@err</h3>
        }
    }

    @if (ViewBag.DelBookErrors != null)
    {
        var error = ViewBag.DelBookErrors;

        foreach (var err in error)
        {
            <h3 class="text-center mt-3 text-danger">@err</h3>
        }
    }
</div>
