@model LibraryManagement.DataTransferObjects.AddBookDto;
@{
    ViewData["Title"] = "AddBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row"><h2 class="float-right mt-4">اضافه کردن کتاب</h2></div>

<form class="mt-3 w-50 center-block" method="post" asp-controller="Library" asp-action="AddBook">
    <div class="form-group">
        <label for="bookname" class="float-right">نام کتاب</label>
        <input type="text" class="form-control" id="bookname" asp-for="@Model.BookName" placeholder="نام کتاب">
        <span asp-validation-for="BookName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="author" class="float-right">نام نویسنده</label>
        <input type="text" class="form-control" id="author" asp-for="@Model.AuthorName" placeholder="نام نویسنده">
        <span asp-validation-for="AuthorName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="authorage" class="float-right">سن نویسنده</label>
        <input type="text" class="form-control" id="authorage" asp-for="@Model.AuthorAge" value="" placeholder="سن نویسنده">
        <span asp-validation-for="AuthorAge" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="price" class="float-right">قیمت کتاب</label>
        <input type="text" class="form-control" id="price" asp-for="@Model.BookPrice" placeholder="قیمت کتاب">
        <span asp-validation-for="BookPrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="description" class="float-right">توضیحات</label>
        <textarea class="form-control" id="description" rows="3" placeholder="توضیحات" asp-for="@Model.BookDescription"></textarea>
    </div>
    <button type="submit" class="btn btn-primary w-100">ثبت کتاب</button>
</form>

<div>
    @if (TempData["AddBook"] != null)
    {
        <h3 class="text-center mt-3 text-success">@TempData["AddBook"]</h3>
    }
</div>