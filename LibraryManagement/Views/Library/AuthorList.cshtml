@model LibraryManagement.Service.MessageContract<List<LibraryManagement.DataTransferObjects.AuthorView>>

@{
    ViewData["Title"] = "AuthorList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .table-striped > tbody > tr:nth-child(2n+1) > td, .table-striped > tbody > tr:nth-child(2n+1) > th {
        background-color: darkgray;
    }
</style>

<div class="row"><h2 class="float-right mt-4">لیست نویسنده ها</h2></div>


<table class="table table-striped table-dark table-bordered text-center">
    <thead>
        <tr>
            <th>نام نویسنده</th>
            <th>حذف نویسنده</th>
            <th>جزئیات نویسنده</th>
        </tr>
    </thead>
    @foreach (var author in Model.Data)
    {
        <tr>
            <td>
                @author.Name
            </td>
            <td>
                <a class="text-danger btn btn-light w-100" href="/Library/DeleteAuthor/@author.Id">حذف</a>
            </td>
            <td>
                <a class="text-info btn btn-info w-100" href="/Library/AuthorDetail/@author.Id">جزئییات</a>
            </td>
        </tr>
    }
</table>
<table>
    <tr>
        @for (int i = 1; i < Model.Paged.TotalPages; i++)
        {
            <td>
                @if (i != Model.Paged.PageNumber)
                {
                    <a href="/Library/AuthorList?pageNumber=@i" class="btn btn-primary">@i</a>
                }
                else
                {
                    <span class="btn btn-danger">@i</span>
                }
            </td>
        }
    </tr>
</table>

<div>
    @if (ViewBag.AuthorListErrors != null)
    {
        var error = ViewBag.AuthorListErrors;

        foreach (var err in error)
        {
            <h3 class="text-center mt-3 text-danger">@err</h3>
        }
    }

    @if (ViewBag.DelAuthorErrors != null)
    {
        var error = ViewBag.DelAuthorErrors;

        foreach (var err in error)
        {
            <h3 class="text-center mt-3 text-danger">@err</h3>
        }
    }

    @if (TempData["DeleteAuthor"] != null)
    {
        <h3 class="text-center mt-3 text-danger">@TempData["DeleteAuthor"]</h3>
    }

    @if (TempData["NotAuthorListExist"] != null)
    {
        <h3 class="text-center mt-3 text-danger">@TempData["NotAuthorListExist"]</h3>
    }
</div>
