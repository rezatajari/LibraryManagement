@model List<LibraryManagement.DataTransferObjects.AuthorView>

@{
    ViewData["Title"] = "AuthorList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .table-striped > tbody > tr:nth-child(2n+1) > td, .table-striped > tbody > tr:nth-child(2n+1) > th {
        background-color: darkgray;
    }
</style>

<div class="row"><h2 class="float-right mt-4">لیست نویسنده ها</h2></div>


<table class="table table-striped table-dark table-bordered text-center">
    <thead>
        <tr>
            <th>نام نویسنده</th>
            <th>حذف نویسنده</th>
            <th>جزئیات نویسنده</th>
        </tr>
    </thead>
    @foreach (var author in Model)
    {
        <tr>
            <td>
                @author.Name
            </td>
            <td>
                <a class="text-danger btn btn-light w-100" href="/Library/DeleteBook/@author.Id">حذف</a>
            </td>
            <td>
                <a class="text-info btn btn-info w-100" href="/Library/BookDetail/@author.Id">جزئییات</a>
            </td>
        </tr>
    }
</table>

<div>
    @if (TempData["DeleteAuthor"] != null)
    {
        <h3 class="text-center mt-3 text-danger">@TempData["DeleteAuthor"]</h3>
    }
</div>
